                author: "–î–∂–æ—Ä–¥–∂ –ö–ª–µ–π—Å–æ–Ω",
                description: "–î—Ä–µ–≤–Ω–∏–µ –ø—Ä–∏–Ω—Ü–∏–ø—ã —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è –¥–µ–Ω—å–≥–∞–º–∏, –∫–æ—Ç–æ—Ä—ã–µ –æ—Å—Ç–∞—é—Ç—Å—è –∞–∫—Ç—É–∞–ª—å–Ω—ã–º–∏ –∏ —Å–µ–≥–æ–¥–Ω—è.",
                rating: "4.6/5"
            },
            {
                title: "–î—É–º–∞–π –∏ –±–æ–≥–∞—Ç–µ–π",
                author: "–ù–∞–ø–æ–ª–µ–æ–Ω –•–∏–ª–ª",
                description: "–§—É–Ω–¥–∞–º–µ–Ω—Ç–∞–ª—å–Ω–∞—è —Ä–∞–±–æ—Ç–∞ –æ —Å–∏–ª–µ –º—ã—Å–ª–∏ –∏ –ø—Ä–∞–≤–∏–ª—å–Ω–æ–º –Ω–∞—Å—Ç—Ä–æ–µ –¥–ª—è –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è –±–æ–≥–∞—Ç—Å—Ç–≤–∞.",
                rating: "4.5/5"
            },
            {
                title: "–ü—É—Ç—å –∫ —Ñ–∏–Ω–∞–Ω—Å–æ–≤–æ–π —Å–≤–æ–±–æ–¥–µ",
                author: "–ë–æ–¥–æ –®–µ—Ñ–µ—Ä",
                description: "–ü—Ä–∞–∫—Ç–∏—á–µ—Å–∫–æ–µ —Ä—É–∫–æ–≤–æ–¥—Å—Ç–≤–æ –ø–æ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—é —Ñ–∏–Ω–∞–Ω—Å–æ–≤–æ–π –Ω–µ–∑–∞–≤–∏—Å–∏–º–æ—Å—Ç–∏.",
                rating: "4.4/5"
            },
            {
                title: "–†–∞–∑—É–º–Ω—ã–π –∏–Ω–≤–µ—Å—Ç–æ—Ä",
                author: "–ë–µ–Ω–¥–∂–∞–º–∏–Ω –ì—Ä—ç–º",
                description: "–ë–∏–±–ª–∏—è —Å—Ç–æ–∏–º–æ—Å—Ç–Ω–æ–≥–æ –∏–Ω–≤–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è –æ—Ç —É—á–∏—Ç–µ–ª—è –£–æ—Ä—Ä–µ–Ω–∞ –ë–∞—Ñ—Ñ–µ—Ç–∞.",
                rating: "4.8/5"
            },
            {
                title: "–ú–∞–Ω–∏, –∏–ª–∏ –ê–∑–±—É–∫–∞ –¥–µ–Ω–µ–≥",
                author: "–ë–æ–¥–æ –®–µ—Ñ–µ—Ä",
                description: "–ü—Ä–æ—Å—Ç–∞—è –∏ –ø–æ–Ω—è—Ç–Ω–∞—è –∫–Ω–∏–≥–∞ –æ–± –æ—Å–Ω–æ–≤–∞—Ö —Ñ–∏–Ω–∞–Ω—Å–æ–≤–æ–π –≥—Ä–∞–º–æ—Ç–Ω–æ—Å—Ç–∏ –¥–ª—è –¥–µ—Ç–µ–π –∏ –≤–∑—Ä–æ—Å–ª—ã—Ö.",
                rating: "4.3/5"
            }
        ];

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            initializeApp();
            updateUI();
            initializeBooks();
            initializeHistory();
        });

        function initializeApp() {
            // –£—Å—Ç–∞–Ω–æ–≤–∫–∞ —Ç–µ–∫—É—â–µ–π –¥–∞—Ç—ã –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é
            document.getElementById('date').valueAsDate = new Date();
            
            // –ó–∞–ø–æ–ª–Ω–µ–Ω–∏–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–π
            updateCategoryOptions();
            
            // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
            document.getElementById('type').addEventListener('change', updateCategoryOptions);
            document.getElementById('transaction-form').addEventListener('submit', addTransaction);
            document.getElementById('fixed-expense-form').addEventListener('submit', addFixedExpense);
            
            // –ü–∞–≥–∏–Ω–∞—Ü–∏—è
            document.getElementById('prev-page').addEventListener('click', prevPage);
            document.getElementById('next-page').addEventListener('click', nextPage);
            
            // –ù–∞–≤–∏–≥–∞—Ü–∏—è
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    switchTab(this.getAttribute('href').substring(1));
                });
            });
        }

        function initializeBooks() {
            const booksList = document.getElementById('books-list');
            financialBooks.forEach(book => {
                const bookCard = document.createElement('div');
                bookCard.className = 'book-card';
                bookCard.innerHTML = `
                    <div class="book-title">${book.title}</div>
                    <div class="book-author">${book.author}</div>
                    <div class="book-description">${book.description}</div>
                    <div class="book-rating">–†–µ–π—Ç–∏–Ω–≥: ${book.rating}</div>
                `;
                booksList.appendChild(bookCard);
            });
        }

        function initializeHistory() {
            const yearSelect = document.getElementById('year-select');
            const currentYear = new Date().getFullYear();
            
            // –î–æ–±–∞–≤–ª—è–µ–º –≥–æ–¥—ã –æ—Ç 2020 –¥–æ —Ç–µ–∫—É—â–µ–≥–æ
            for (let year = 2020; year <= currentYear; year++) {
                const option = document.createElement('option');
                option.value = year;
                option.textContent = year;
                if (year === currentYear) option.selected = true;
                yearSelect.appendChild(option);
            }
            
            // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ç–µ–∫—É—â–∏–π –º–µ—Å—è—Ü
            const currentMonth = new Date().getMonth();
            document.getElementById('month-select').value = currentMonth;
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ –∑–∞ —Ç–µ–∫—É—â–∏–π –º–µ—Å—è—Ü
            loadMonthlyData();
        }

        function loadMonthlyData() {
            const year = parseInt(document.getElementById('year-select').value);
            const month = parseInt(document.getElementById('month-select').value);
            
            const monthlyData = document.getElementById('monthly-data');
            monthlyData.innerHTML = '';
            
            // –§–∏–ª—å—Ç—Ä—É–µ–º —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–∏ –ø–æ –≤—ã–±—Ä–∞–Ω–Ω–æ–º—É –º–µ—Å—è—Ü—É –∏ –≥–æ–¥—É
            const monthTransactions = transactions.filter(t => {
                const date = new Date(t.date);
                return date.getFullYear() === year && date.getMonth() === month;
            });
            
            const income = monthTransactions
                .filter(t => t.type === 'income')
                .reduce((sum, t) => sum + t.amount, 0);
                
            const expense = monthTransactions
                .filter(t => t.type === 'expense')
                .reduce((sum, t) => sum + t.amount, 0);
            
            const savings = income - expense;
            
            const monthCard = document.createElement('div');
            monthCard.className = 'month-card';
            monthCard.innerHTML = `
                <h3>${getMonthName(month)} ${year}</h3>
                <div class="month-stats">
                    <div class="stat-item stat-income">
                        <div>–î–æ—Ö–æ–¥—ã</div>
                        <div style="font-size: 1.5em; font-weight: bold;">${income.toLocaleString()} ‚ÇΩ</div>
                    </div>
                    <div class="stat-item stat-expense">
                        <div>–†–∞—Å—Ö–æ–¥—ã</div>
                        <div style="font-size: 1.5em; font-weight: bold;">${expense.toLocaleString()} ‚ÇΩ</div>
                    </div>
                    <div class="stat-item stat-savings">
                        <div>–°–±–µ—Ä–µ–∂–µ–Ω–∏—è</div>
                        <div style="font-size: 1.5em; font-weight: bold;">${savings.toLocaleString()} ‚ÇΩ</div>
                    </div>
                </div>
                <div style="margin-top: 20px;">
                    <h4>–î–µ—Ç–∞–ª–∏–∑–∞—Ü–∏—è —Ä–∞—Å—Ö–æ–¥–æ–≤:</h4>
                    <div id="month-expenses-detail-${year}-${month}">
                        <!-- –î–µ—Ç–∞–ª–∏–∑–∞—Ü–∏—è –±—É–¥–µ—Ç –¥–æ–±–∞–≤–ª–µ–Ω–∞ —á–µ—Ä–µ–∑ JS -->
                    </div>
                </div>
            `;
            
            monthlyData.appendChild(monthCard);
            
            // –î–æ–±–∞–≤–ª—è–µ–º –¥–µ—Ç–∞–ª–∏–∑–∞—Ü–∏—é —Ä–∞—Å—Ö–æ–¥–æ–≤ –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º
            updateMonthlyExpensesDetail(year, month);
        }

        function updateMonthlyExpensesDetail(year, month) {
            const monthTransactions = transactions.filter(t => {
                const date = new Date(t.date);
                return date.getFullYear() === year && date.getMonth() === month && t.type === 'expense';
            });
            
            const categorySums = {};
            monthTransactions.forEach(transaction => {
                categorySums[transaction.category] = (categorySums[transaction.category] || 0) + transaction.amount;
            });
            
            const detailContainer = document.getElementById(`month-expenses-detail-${year}-${month}`);
            detailContainer.innerHTML = '';
            
            Object.entries(categorySums).forEach(([category, amount]) => {
                const categoryItem = document.createElement('div');
                categoryItem.style.cssText = 'display: flex; justify-content: space-between; padding: 8px; border-bottom: 1px solid #eee;';
                categoryItem.innerHTML = `
                    <span>${category}</span>
                    <span style="font-weight: bold; color: #e74c3c;">${amount.toLocaleString()} ‚ÇΩ</span>
                `;
                detailContainer.appendChild(categoryItem);
            });
            
            if (Object.keys(categorySums).length === 0) {
                detailContainer.innerHTML = '<p style="color: #7f8c8d; text-align: center;">–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –æ —Ä–∞—Å—Ö–æ–¥–∞—Ö –∑–∞ —ç—Ç–æ—Ç –º–µ—Å—è—Ü</p>';
            }
        }

        function getMonthName(monthIndex) {
            const months = [
                '–Ø–Ω–≤–∞—Ä—å', '–§–µ–≤—Ä–∞–ª—å', '–ú–∞—Ä—Ç', '–ê–ø—Ä–µ–ª—å', '–ú–∞–π', '–ò—é–Ω—å',
                '–ò—é–ª—å', '–ê–≤–≥—É—Å—Ç', '–°–µ–Ω—Ç—è–±—Ä—å', '–û–∫—Ç—è–±—Ä—å', '–ù–æ—è–±—Ä—å', '–î–µ–∫–∞–±—Ä—å'
            ];
            return months[monthIndex];
        }

        function updateCategoryOptions() {
            const type = document.getElementById('type').value;
            const categorySelect = document.getElementById('category');
            categorySelect.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ –∫–∞—Ç–µ–≥–æ—Ä–∏—é</option>';
            
            categories[type].forEach(cat => {
                const option = document.createElement('option');
                option.value = cat;
                option.textContent = cat;
                categorySelect.appendChild(option);
            });
        }

        function switchTab(tabId) {
            // –£–±—Ä–∞—Ç—å –∞–∫—Ç–∏–≤–Ω—ã–π –∫–ª–∞—Å—Å —Å–æ –≤—Å–µ—Ö –≤–∫–ª–∞–¥–æ–∫ –∏ –∫–æ–Ω—Ç–µ–Ω—Ç–∞
            document.querySelectorAll('.nav-link').forEach(link => link.classList.remove('active'));
            document.querySelectorAll('.tab-pane').forEach(pane => pane.classList.remove('active'));
            
            // –ê–∫—Ç–∏–≤–∏—Ä–æ–≤–∞—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—É—é –≤–∫–ª–∞–¥–∫—É
            document.querySelector(`[href="#${tabId}"]`).classList.add('active');
            document.getElementById(tabId).classList.add('active');
            
            // –û–±–Ω–æ–≤–∏—Ç—å –≥—Ä–∞—Ñ–∏–∫ –ø—Ä–∏ –ø–µ—Ä–µ—Ö–æ–¥–µ –Ω–∞ –≥–ª–∞–≤–Ω—É—é
            if (tabId === 'dashboard') {
                updateChart();
            }
        }

        function addTransaction(e) {
            e.preventDefault();
            
            const transaction = {
                id: Date.now(),
                type: document.getElementById('type').value,
                amount: parseFloat(document.getElementById('amount').value),
                category: document.getElementById('category').value,
                date: document.getElementById('date').value,
                description: document.getElementById('description').value
            };
            
            transactions.push(transaction);
            saveData();
            updateUI();
            this.reset();
            document.getElementById('date').valueAsDate = new Date();
        }

        function addFixedExpense(e) {
            e.preventDefault();
            
            const expense = {
                id: Date.now(),
                name: document.getElementById('expense-name').value,
                amount: parseFloat(document.getElementById('expense-amount').value),
                category: document.getElementById('expense-category').value,
                paymentDay: parseInt(document.getElementById('payment-day').value)
            };
            
            fixedExpenses.push(expense);
            saveData();
            updateUI();
            this.reset();
        }

        function deleteTransaction(id) {
            transactions = transactions.filter(t => t.id !== id);
            saveData();
            updateUI();
        }

        function deleteFixedExpense(id) {
            fixedExpenses = fixedExpenses.filter(e => e.id !== id);
            saveData();
            updateUI();
        }

        function saveData() {
            localStorage.setItem('transactions', JSON.stringify(transactions));
            localStorage.setItem('fixedExpenses', JSON.stringify(fixedExpenses));
        }

        function updateUI() {
            updateTransactionsList();
            updateFixedExpensesList();
            updateSummary();
            updateChart();
            updatePagination();
        }

        function updateTransactionsList() {
            const list = document.getElementById('transactions-list');
            list.innerHTML = '';
            
            const sortedTransactions = transactions.sort((a, b) => new Date(b.date) - new Date(a.date));
            const totalPages = Math.ceil(sortedTransactions.length / transactionsPerPage);
            
            // –ü–æ–ª—É—á–∞–µ–º —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–∏ –¥–ª—è —Ç–µ–∫—É—â–µ–π —Å—Ç—Ä–∞–Ω–∏—Ü—ã
            const startIndex = (currentPage - 1) * transactionsPerPage;
            const endIndex = startIndex + transactionsPerPage;
            const pageTransactions = sortedTransactions.slice(startIndex, endIndex);
            
            pageTransactions.forEach(transaction => {
                const item = document.createElement('div');
                item.className = `transaction-item ${transaction.type}`;
                item.innerHTML = `
                    <div>
                        <strong>${transaction.category}</strong>
                        <div>${transaction.description || '–ë–µ–∑ –æ–ø–∏—Å–∞–Ω–∏—è'}</div>
                        <small>${formatDate(transaction.date)}</small>
                    </div>
                    <div style="text-align: right;">
                        <div style="font-weight: bold; color: ${transaction.type === 'income' ? '#27ae60' : '#e74c3c'}">
                            ${transaction.type === 'income' ? '+' : '-'}${transaction.amount} ‚ÇΩ
                        </div>
                        <button class="delete-btn" onclick="deleteTransaction(${transaction.id})">–£–¥–∞–ª–∏—Ç—å</button>
                    </div>
                `;
                list.appendChild(item);
            });
            
            if (pageTransactions.length === 0) {
                list.innerHTML = '<p style="text-align: center; color: #7f8c8d;">–ù–µ—Ç —Ç—Ä–∞–Ω–∑–∞–∫—Ü–∏–π</p>';
            }
        }

        function updatePagination() {
            const totalPages = Math.ceil(transactions.length / transactionsPerPage);
            const pageInfo = document.getElementById('page-info');
            const prevBtn = document.getElementById('prev-page');
            const nextBtn = document.getElementById('next-page');
            
            pageInfo.textContent = `–°—Ç—Ä–∞–Ω–∏—Ü–∞ ${currentPage} –∏–∑ ${totalPages}`;
            prevBtn.disabled = currentPage === 1;
            nextBtn.disabled = currentPage === totalPages || totalPages === 0;
        }

        function prevPage() {
            if (currentPage > 1) {
                currentPage--;
                updateTransactionsList();
                updatePagination();
            }
        }

        function nextPage() {
            const totalPages = Math.ceil(transactions.length / transactionsPerPage);
            if (currentPage < totalPages) {
                currentPage++;
                updateTransactionsList();
                updatePagination();
            }
        }

        function updateFixedExpensesList() {
            const list = document.getElementById('fixed-expenses-list');
            list.innerHTML = '';
            
            fixedExpenses.forEach(expense => {
                const item = document.createElement('div');
                item.className = 'fixed-expense-item';
                item.innerHTML = `
                    <h4>${expense.name}</h4>
                    <div style="font-size: 1.5em; font-weight: bold; color: #e74c3c; margin: 10px 0;">
                        ${expense.amount} ‚ÇΩ/–º–µ—Å
                    </div>
                    <div style="margin-bottom: 10px;">
                        <strong>–ö–∞—Ç–µ–≥–æ—Ä–∏—è:</strong> ${expense.category}
                    </div>
                    <div style="margin-bottom: 15px;">
                        <strong>–î–∞—Ç–∞ –æ–ø–ª–∞—Ç—ã:</strong> ${expense.paymentDay} —á–∏—Å–ª–æ
                    </div>
                    <button class="delete-btn" onclick="deleteFixedExpense(${expense.id})">–£–¥–∞–ª–∏—Ç—å</button>
                `;
                list.appendChild(item);
            });
        }

        function updateSummary() {
            const totalIncome = transactions
                .filter(t => t.type === 'income')
                .reduce((sum, t) => sum + t.amount, 0);
                
            const totalExpense = transactions
                .filter(t => t.type === 'expense')
                .reduce((sum, t) => sum + t.amount, 0);
                
            const totalFixedExpense = fixedExpenses.reduce((sum, e) => sum + e.amount, 0);
            const totalExpenseWithFixed = totalExpense + totalFixedExpense;
            const balance = totalIncome - totalExpenseWithFixed;
            
            document.getElementById('total-income').textContent = `${totalIncome.toLocaleString()} ‚ÇΩ`;
            document.getElementById('total-expense').textContent = `${totalExpenseWithFixed.toLocaleString()} ‚ÇΩ`;
            document.getElementById('total-balance').textContent = `${balance.toLocaleString()} ‚ÇΩ`;
        }

        function updateChart() {
            const ctx = document.getElementById('expenseChart').getContext('2d');
            
            // –£–¥–∞–ª—è–µ–º —Å—Ç–∞—Ä—ã–π –≥—Ä–∞—Ñ–∏–∫ –µ—Å–ª–∏ —Å—É—â–µ—Å—Ç–≤—É–µ—Ç
            if (expenseChart) {
                expenseChart.destroy();
            }
            
            // –ü–æ–ª—É—á–∞–µ–º –¥–∞–Ω–Ω—ã–µ –∑–∞ —Ç–µ–∫—É—â–∏–π –º–µ—Å—è—Ü
            const currentMonth = new Date().getMonth();
            const currentYear = new Date().getFullYear();
            
            const monthlyExpenses = transactions.filter(t => {
                const date = new Date(t.date);
                return t.type === 'expense' && 
                       date.getMonth() === currentMonth && 
                       date.getFullYear() === currentYear;
            });
            
            // –ì—Ä—É–ø–ø–∏—Ä—É–µ–º –ø–æ –∫–∞—Ç–µ–≥–æ—Ä–∏—è–º
            const categorySums = {};
            monthlyExpenses.forEach(transaction => {
                categorySums[transaction.category] = (categorySums[transaction.category] || 0) + transaction.amount;
            });
            
            // –°–æ–∑–¥–∞–µ–º –Ω–æ–≤—ã–π –≥—Ä–∞—Ñ–∏–∫
            expenseChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(categorySums),
                    datasets: [{
                        data: Object.values(categorySums),
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0',
                            '#9966FF', '#FF9F40', '#FF6384', '#C9CBCF'
                        ],
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        },
                        title: {
                            display: true,
                            text: '–†–∞—Å–ø—Ä–µ–¥–µ–ª–µ–Ω–∏–µ —Ä–∞—Å—Ö–æ–¥–æ–≤'
                        }
                    }
                }
            });
        }

        // –§—É–Ω–∫—Ü–∏–∏ —ç–∫—Å–ø–æ—Ä—Ç–∞/–∏–º–ø–æ—Ä—Ç–∞ (–æ—Å—Ç–∞—é—Ç—Å—è –±–µ–∑ –∏–∑–º–µ–Ω–µ–Ω–∏–π)
        function exportData() {
            const data = {
                transactions: transactions,
                fixedExpenses: fixedExpenses,
                exportDate: new Date().toISOString(),
                version: '1.0'
            };
            
            downloadJSON(data, 'myfinance_backup_all.json');
            showStatus('‚úÖ –í—Å–µ –¥–∞–Ω–Ω—ã–µ —É—Å–ø–µ—à–Ω–æ —ç–∫—Å–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω—ã!', 'success');
        }

        function exportTransactions() {
            const data = {
                transactions: transactions,
                exportDate: new Date().toISOString(),
                version: '1.0'
            };
            
            downloadJSON(data, 'myfinance_transactions.json');
            showStatus('‚úÖ –¢—Ä–∞–Ω–∑–∞–∫—Ü–∏–∏ —É—Å–ø–µ—à–Ω–æ —ç–∫—Å–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω—ã!', 'success');
        }

        function exportFixedExpenses() {
            const data = {
                fixedExpenses: fixedExpenses,
                exportDate: new Date().toISOString(),
                version: '1.0'
            };
            
            downloadJSON(data, 'myfinance_fixed_expenses.json');
            showStatus('‚úÖ –û–±—è–∑–∞—Ç–µ–ª—å–Ω—ã–µ —Ç—Ä–∞—Ç—ã —É—Å–ø–µ—à–Ω–æ —ç–∫—Å–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω—ã!', 'success');
        }

        function downloadJSON(data, filename) {
            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        }

        function handleFileImport(files) {
            if (files.length === 0) return;
            
            const file = files[0];
            const reader = new FileReader();
            
            reader.onload = function(e) {
                try {
                    const data = JSON.parse(e.target.result);
                    importData(data);
                } catch (error) {
                    showStatus('‚ùå –û—à–∏–±–∫–∞: –§–∞–π–ª –ø–æ–≤—Ä–µ–∂–¥–µ–Ω –∏–ª–∏ –∏–º–µ–µ—Ç –Ω–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç', 'error');
                }
            };
            
            reader.readAsText(file);
        }

        function importData(data) {
            if (confirm('–í–Ω–∏–º–∞–Ω–∏–µ! –≠—Ç–æ –¥–µ–π—Å—Ç–≤–∏–µ –ø–µ—Ä–µ–∑–∞–ø–∏—à–µ—Ç –≤—Å–µ —Ç–µ–∫—É—â–∏–µ –¥–∞–Ω–Ω—ã–µ. –ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å?')) {
                if (data.transactions) {
                    transactions = data.transactions;
                }
                if (data.fixedExpenses) {
                    fixedExpenses = data.fixedExpenses;
                }
                
                saveData();
                updateUI();
                showStatus('‚úÖ –î–∞–Ω–Ω—ã–µ —É—Å–ø–µ—à–Ω–æ –∏–º–ø–æ—Ä—Ç–∏—Ä–æ–≤–∞–Ω—ã!', 'success');
            }
        }

        function createBackup() {
            const backup = {
                transactions: transactions,
                fixedExpenses: fixedExpenses,
                backupDate: new Date().toISOString(),
                totalRecords: transactions.length + fixedExpenses.length,
                summary: {
                    totalIncome: transactions.filter(t => t.type === 'income').reduce((sum, t) => sum + t.amount, 0),
                    totalExpense: transactions.filter(t => t.type === 'expense').reduce((sum, t) => sum + t.amount, 0),
                    totalFixedExpenses: fixedExpenses.reduce((sum, e) => sum + e.amount, 0)
                }
            };
            
            localStorage.setItem('finance_backup', JSON.stringify(backup));
            showStatus('‚úÖ –†–µ–∑–µ—Ä–≤–Ω–∞—è –∫–æ–ø–∏—è —Å–æ–∑–¥–∞–Ω–∞ –∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞ –≤ –±—Ä–∞—É–∑–µ—Ä–µ!', 'success');
        }

        function restoreFromBackup() {
            const backup = localStorage.getItem('finance_backup');
            if (!backup) {
                showStatus('‚ùå –†–µ–∑–µ—Ä–≤–Ω–∞—è –∫–æ–ø–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω–∞', 'error');
                return;
            }
            
            if (confirm('–í–æ—Å—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –¥–∞–Ω–Ω—ã–µ –∏–∑ –ø–æ—Å–ª–µ–¥–Ω–µ–π —Ä–µ–∑–µ—Ä–≤–Ω–æ–π –∫–æ–ø–∏–∏?')) {
                try {
                    const data = JSON.parse(backup);
                    transactions = data.transactions || [];
                    fixedExpenses = data.fixedExpenses || [];
                    saveData();
                    updateUI();
                    showStatus('‚úÖ –î–∞–Ω–Ω—ã–µ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω—ã –∏–∑ —Ä–µ–∑–µ—Ä–≤–Ω–æ–π –∫–æ–ø–∏–∏!', 'success');
                } catch (error) {
                    showStatus('‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏–∏ –¥–∞–Ω–Ω—ã—Ö', 'error');
                }
            }
        }

        function clearAllData() {
            if (confirm('–í–ù–ò–ú–ê–ù–ò–ï! –≠—Ç–æ –¥–µ–π—Å—Ç–≤–∏–µ —É–¥–∞–ª–∏—Ç –í–°–ï –¥–∞–Ω–Ω—ã–µ –±–µ–∑ –≤–æ–∑–º–æ–∂–Ω–æ—Å—Ç–∏ –≤–æ—Å—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–∏—è. –ü—Ä–æ–¥–æ–ª–∂–∏—Ç—å?')) {
                transactions = [];
                fixedExpenses = [];
                saveData();
                updateUI();
                showStatus('üóëÔ∏è –í—Å–µ –¥–∞–Ω–Ω—ã–µ –æ—á–∏—â–µ–Ω—ã', 'info');
            }
        }

        function showStatus(message, type) {
            const statusEl = document.getElementById('backup-status');
            statusEl.innerHTML = `
                <div style="padding: 10px; border-radius: 5px; background: ${
                    type === 'success' ? '#d4edda' : 
                    type === 'error' ? '#f8d7da' : 
                    '#fff3cd'
                }; color: ${
                    type === 'success' ? '#155724' : 
                    type === 'error' ? '#721c24' : 
                    '#856404'
                }; border: 1px solid ${
                    type === 'success' ? '#c3e6cb' : 
                    type === 'error' ? '#f5c6cb' : 
                    '#ffeaa7'
                }">
                    ${message}
                </div>
            `;
            
            setTimeout(() => {
                statusEl.innerHTML = '';
            }, 5000);
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('ru-RU');
        }
    </script>
</body>
</html>
