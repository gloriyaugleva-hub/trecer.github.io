                <div class="export-import-section">
                    <h3>–ò–º–ø–æ—Ä—Ç –¥–∞–Ω–Ω—ã—Ö</h3>
                    <p>–ó–∞–≥—Ä—É–∑–∏—Ç–µ —Ä–∞–Ω–µ–µ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –∏–∑ —Ñ–∞–π–ª–∞. –í–Ω–∏–º–∞–Ω–∏–µ: —ç—Ç–æ –ø–µ—Ä–µ–∑–∞–ø–∏—à–µ—Ç —Ç–µ–∫—É—â–∏–µ –¥–∞–Ω–Ω—ã–µ!</p>
                    <div class="btn-group">
                        <label for="import-file" class="file-label">
                            üì§ –í—ã–±—Ä–∞—Ç—å —Ñ–∞–π–ª –¥–ª—è –∏–º–ø–æ—Ä—Ç–∞
                        </label>
                        <input type="file" id="import-file" class="file-input" accept=".json" onchange="handleFileImport(this.files)">
                        <button class="btn-import" onclick="document.getElementById('import-file').click()">
                            üîÑ –ò–º–ø–æ—Ä—Ç –¥–∞–Ω–Ω—ã—Ö
                        </button>
                    </div>
                </div>

                <div class="export-import-section">
                    <h3>–ë—ã—Å—Ç—Ä—ã–µ –¥–µ–π—Å—Ç–≤–∏—è</h3>
                    <p>–£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –¥–∞–Ω–Ω—ã–º–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è</p>
                    <div class="btn-group">
                        <button class="btn-backup" onclick="createBackup()">üíæ –°–æ–∑–¥–∞—Ç—å —Ä–µ–∑–µ—Ä–≤–Ω—É—é –∫–æ–ø–∏—é</button>
                        <button class="btn-import" onclick="restoreFromBackup()">üîÑ –í–æ—Å—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –∏–∑ –∫–æ–ø–∏–∏</button>
                        <button class="delete-btn" onclick="clearAllData()" style="background: #e74c3c;">üóëÔ∏è –û—á–∏—Å—Ç–∏—Ç—å –≤—Å–µ –¥–∞–Ω–Ω—ã–µ</button>
                    </div>
                </div>

                <div class="backup-notice">
                    <h4>üí° –°–æ–≤–µ—Ç—ã –ø–æ —Ä–µ–∑–µ—Ä–≤–Ω–æ–º—É –∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∏—é</h4>
                    <ul>
                        <li>–†–µ–≥—É–ª—è—Ä–Ω–æ —ç–∫—Å–ø–æ—Ä—Ç–∏—Ä—É–π—Ç–µ –¥–∞–Ω–Ω—ã–µ –ø–µ—Ä–µ–¥ –æ—á–∏—Å—Ç–∫–æ–π –±—Ä–∞—É–∑–µ—Ä–∞</li>
                        <li>–•—Ä–∞–Ω–∏—Ç–µ —Ä–µ–∑–µ—Ä–≤–Ω—ã–µ –∫–æ–ø–∏–∏ –≤ –Ω–∞–¥–µ–∂–Ω–æ–º –º–µ—Å—Ç–µ</li>
                        <li>–§–∞–π–ª—ã —Å–æ—Ö—Ä–∞–Ω—è—é—Ç—Å—è –≤ —Ñ–æ—Ä–º–∞—Ç–µ JSON –∏ —Å–æ–¥–µ—Ä–∂–∞—Ç –≤—Å—é –≤–∞—à—É —Ñ–∏–Ω–∞–Ω—Å–æ–≤—É—é –∏—Å—Ç–æ—Ä–∏—é</li>
                        <li>–î–ª—è –ø–µ—Ä–µ–Ω–æ—Å–∞ –Ω–∞ –¥—Ä—É–≥–æ–µ —É—Å—Ç—Ä–æ–π—Å—Ç–≤–æ –ø—Ä–æ—Å—Ç–æ –∏–º–ø–æ—Ä—Ç–∏—Ä—É–π—Ç–µ —Ñ–∞–π–ª</li>
                    </ul>
                </div>

                <div id="backup-status" style="margin-top: 20px;"></div>
            </div>
        </div>
    </div>

    <script>
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –¥–∞–Ω–Ω—ã—Ö
        let transactions = JSON.parse(localStorage.getItem('transactions')) || [];
        let fixedExpenses = JSON.parse(localStorage.getItem('fixedExpenses')) || [];
        let expenseChart = null;
        let currentPage = 1;
        const transactionsPerPage = 10;

        // –ö–∞—Ç–µ–≥–æ—Ä–∏–∏ –¥–ª—è –¥–æ—Ö–æ–¥–æ–≤ –∏ —Ä–∞—Å—Ö–æ–¥–æ–≤
        const categories = {
            income: ['–ó–∞—Ä–ø–ª–∞—Ç–∞', '–§—Ä–∏–ª–∞–Ω—Å', '–ò–Ω–≤–µ—Å—Ç–∏—Ü–∏–∏', '–ü–æ–¥–∞—Ä–∫–∏', '–î—Ä—É–≥–æ–µ'],
            expense: ['–ü—Ä–æ–¥—É–∫—Ç—ã', '–¢—Ä–∞–Ω—Å–ø–æ—Ä—Ç', '–†–∞–∑–≤–ª–µ—á–µ–Ω–∏—è', '–û–¥–µ–∂–¥–∞', '–ó–¥–æ—Ä–æ–≤—å–µ', '–û–±—Ä–∞–∑–æ–≤–∞–Ω–∏–µ', '–ñ–ö–•', '–°–≤—è–∑—å', '–î—Ä—É–≥–æ–µ']
        };

        // –ö–Ω–∏–≥–∏ –ø–æ —Ñ–∏–Ω–∞–Ω—Å–æ–≤–æ–π –≥—Ä–∞–º–æ—Ç–Ω–æ—Å—Ç–∏
        const financialBooks = [
            {
                title: "–ë–æ–≥–∞—Ç—ã–π –ø–∞–ø–∞, –±–µ–¥–Ω—ã–π –ø–∞–ø–∞",
                author: "–†–æ–±–µ—Ä—Ç –ö–∏–π–æ—Å–∞–∫–∏",
                description: "–ö–ª–∞—Å—Å–∏–∫–∞ —Ñ–∏–Ω–∞–Ω—Å–æ–≤–æ–≥–æ –æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è. –ê–≤—Ç–æ—Ä –æ–±—ä—è—Å–Ω—è–µ—Ç —Ä–∞–∑–Ω–∏—Ü—É –≤ –º—ã—à–ª–µ–Ω–∏–∏ –º–µ–∂–¥—É –±–æ–≥–∞—Ç—ã–º–∏ –∏ –±–µ–¥–Ω—ã–º–∏ –ª—é–¥—å–º–∏.",
                rating: "4.7/5"
            },
            {
